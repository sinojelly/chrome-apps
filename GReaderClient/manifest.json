{
"update_url":"http://clients2.google.com/service/update2/crx",
  "name": "GReader Client",
  "version": "0.1",
  "background_page": "background.html",
  "description": "Displays the number of unread items in your Google Reader account. Clicking can show a preview popup or open your Reader account.",
  "options_page": "options.html",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_icon": "icon-signed-out.png",
    "popup": "module.html"
  },
  "permissions": [
    "tabs",
    "http://www.google.com/"
  ]
}
